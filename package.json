{
  "name": "botify-sdk-js",
  "version": "1.0.0-beta0",
  "description": "Botify API Javascript SDK",
  "author": "Botify <labs@botify.com>",
  "main": "./src/index.js",
  "scripts": {
    "clean": "rimraf dist",
    "lint": "eslint .",
    "test": "mocha --compilers js:babel/register --recursive",
    "test:watch": "npm test -- --watch",
    "check": "npm run lint && npm run test",
    "build:dist": "webpack --config webpack.config.production.js",
    "build": "npm run clean && npm run build:dist",
    "stats": "webpack --config webpack.config.stats.js && npm run clean",
    "preversion": "npm run check && npm run build && git add -A lib dist && git commit -m 'Update bundle'",
    "postversion": "git push && git push --tags && npm run clean"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/botify-labs/botify-sdk-js.git"
  },
  "engines": {
    "node": ">=0.12"
  },
  "dependencies": {
    "superagent": "^1.5.0",
    "string": "^3.1.1"
  },
  "devDependencies": {
    "babel": "^5.0.8",
    "babel-core": "^5.0.8",
    "babel-eslint": "^4.1.3",
    "babel-loader": "^5.0.0",
    "chai": "^3.0.0",
    "eslint": "^1.4.1",
    "eslint-config-airbnb": "^0.1.0",
    "expect": "^1.6.0",
    "fs-extra": "^0.26.3",
    "mocha": "^2.2.5",
    "nock": "^3.4.0",
    "require-all": "^2.0.0",
    "rimraf": "^2.4.3",
    "sinon": "^1.17.1",
    "stats-webpack-plugin": "^0.2.2",
    "through2": "^2.0.0",
    "unzip": "^0.1.11",
    "webpack": "^1.9.5"
  }
}
